<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.leafly_application_git">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- The below is for the splash screen and we need no action bar and the default theme -->
        <activity android:name=".activities.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Main page with bottom navigation bar -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- Payment page -->
        <activity
            android:name=".activities.search.PaymentActivity" android:label="@string/payment_label" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.search.TravelDetailsActivity"/>
        </activity>

        <!-- Select travel page -->
        <activity
            android:name=".activities.search.SelectTravelActivity" android:label="@string/choose_from" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>

        <!-- Select travel time page -->
        <activity
            android:name=".activities.trip.ChooseTravelActivity" android:label="@string/choose_time" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.search.PaymentActivity"/>
        </activity>


        <!-- Travel details page -->
        <activity
            android:name=".activities.trip.TravelDetailActivity" android:label="detaljer" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.trip.ChooseTravelActivity"/>
        </activity>

        <!-- Travel details page -->
        <activity
            android:name=".activities.search.TravelDetailsActivity" android:label="@string/trip_detail_label" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.search.PaymentActivity"/>
        </activity>

        <!-- Payment Splashscreen -->
        <activity android:name=".activities.search.SplashScreenPaymentActivity"
            android:theme="@style/SplashTheme">
        </activity>

        <!-- Payment comfirmation -->
        <activity
            android:name=".activities.search.ConfirmationActivity" android:label="@string/finished_purchase_label" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>

        <!-- Membership benefits overview -->
        <activity
            android:name=".activities.miljopoints.MembershipBenefitsActivity" android:label="@string/member_benefits_label" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>

        </activity>

        <!-- Use points activity with fragments attatched -->
        <activity
            android:name=".activities.miljopoints.usePoints.UsePointsActivity" android:label="@string/use_points_label" android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>


        <!-- Plant a tree page -->
        <activity
            android:name=".activities.miljopoints.usePoints.saveTheWorld.PlantTreeActivity" android:label="@string/plant_a_tree_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.usePoints.UsePointsActivity"/>
        </activity>

        <!-- Clean the ocean page -->
        <activity
            android:name=".activities.miljopoints.usePoints.saveTheWorld.CleanOceanActivity" android:label="@string/clean_the_ocean_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.usePoints.UsePointsActivity"/>
        </activity>

        <!-- Progression details page -->
        <activity
            android:name=".activities.miljopoints.progression.ProgressionActivity" android:label="@string/progression_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>

        <!-- See the tree grow page -->
        <activity
            android:name=".activities.miljopoints.progression.GrowingTreeActivity" android:label="@string/growing_tree_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.progression.ProgressionActivity"/>
        </activity>

        <!-- History activity with fragments attached -->
        <activity
            android:name=".activities.miljopoints.progression.HistoryActivity" android:label="@string/history_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.progression.ProgressionActivity"/>
        </activity>

        <!-- Sign up page -->
        <activity android:name=".activities.authentication.SignUpActivity" android:label="Sign Up">
        </activity>

        <!-- Log in page -->
        <activity android:name=".activities.authentication.LoginActivity" android:label="Log in">
        </activity>

        <!-- QR code page -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>