<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leafly_application_git">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- The below is for the splash screen and we need no action bar and the default theme -->
        <activity android:name=".activities.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.search.PaymentActivity" android:label="@string/payment_label">
        </activity>
        <activity
            android:name=".activities.search.TravelDetailsActivity" android:label="@string/trip_detail_label">
        </activity>

        <activity android:name=".activities.search.SplashScreenPaymentActivity"
            android:theme="@style/SplashTheme">
        </activity>

        <activity
            android:name=".activities.search.ConfirmationActivity" android:label="@string/finished_purchase_label">
        </activity>
        <activity
            android:name=".activities.miljopoints.MembershipBenefitsActivity" android:label="@string/member_benefits_label">
        </activity>
        <activity
            android:name=".activities.miljopoints.UsePointsActivity" android:label="@string/use_points_label">
        </activity>

        <activity
            android:name=".activities.miljopoints.usePoints.DuringTripActivity" android:label="@string/during_trip_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.UsePointsActivity"/>

        </activity>
        <activity
            android:name=".activities.miljopoints.usePoints.DonateActivity" android:label="@string/donate_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.UsePointsActivity"/>
        </activity>
        <activity
            android:name=".activities.miljopoints.usePoints.PointShopActivity" android:label="@string/points_shop_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.UsePointsActivity"/>
        </activity>


        <activity
            android:name=".activities.miljopoints.usePoints.saveTheWorld.PlantTreeActivity" android:label="@string/plant_a_tree_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.usePoints.DonateActivity"/>
        </activity>
        <activity
            android:name=".activities.miljopoints.usePoints.saveTheWorld.CleanOceanActivity" android:label="@string/clean_the_ocean_label">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.miljopoints.usePoints.DonateActivity"/>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>