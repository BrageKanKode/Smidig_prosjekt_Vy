<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/btnToPointShop"
        android:layout_width="303dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:background="#c7c9c7"
        app:layout_constraintStart_toStartOf="@+id/btnToDonate"
        app:layout_constraintTop_toBottomOf="@+id/btnToDonate" />

    <View
        android:id="@+id/btnToDuringTrip"
        android:layout_width="303dp"
        android:layout_height="92dp"
        android:background="#c7c9c7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <View
        android:id="@+id/btnToDonate"
        android:layout_width="303dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:background="#c7c9c7"
        app:layout_constraintStart_toStartOf="@+id/btnToDuringTrip"
        app:layout_constraintTop_toBottomOf="@+id/btnToDuringTrip" />

    <TextView
        android:id="@+id/textView_use_points_title3"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/use_points_link_to_during_trip"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnToDuringTrip"
        app:layout_constraintStart_toStartOf="@+id/btnToDuringTrip"
        app:layout_constraintTop_toTopOf="@+id/btnToDuringTrip" />

    <TextView
        android:id="@+id/textView_use_points_title2"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/use_points_link_to_donate"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnToDonate"
        app:layout_constraintStart_toStartOf="@+id/btnToDonate"
        app:layout_constraintTop_toTopOf="@+id/btnToDonate" />

    <TextView
        android:id="@+id/textView_use_points_title4"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/use_points_link_to_point_shop"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnToPointShop"
        app:layout_constraintStart_toStartOf="@+id/btnToPointShop"
        app:layout_constraintTop_toTopOf="@+id/btnToPointShop" />

</androidx.constraintlayout.widget.ConstraintLayout>