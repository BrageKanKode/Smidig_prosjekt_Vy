<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_header_text"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/white"
        android:icon="@drawable/ic_eco_black_18dp"
        android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingEnd="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        app:layout_constraintCircleRadius="5dp"
        android:textColor="@color/mainBlack"
        android:textSize="20sp"
        android:text="@string/example_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_membership_logo_level"
        android:layout_width="51dp"
        android:layout_height="34dp"
        android:contentDescription="@string/close_marker"
        app:layout_constraintBottom_toBottomOf="@+id/list_header_text"
        app:layout_constraintEnd_toEndOf="@+id/list_header_text"
        app:layout_constraintTop_toTopOf="@+id/list_header_text"
        app:srcCompat="@drawable/ic_clear_24px" />

</androidx.constraintlayout.widget.ConstraintLayout>