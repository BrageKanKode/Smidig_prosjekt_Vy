<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_check_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_done_outline_greem_24px" />

    <TextView
        android:id="@+id/textView_thanks_for_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Takk for ditt kjøp!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView_check_icon"
        app:layout_constraintStart_toStartOf="@+id/imageView_check_icon"
        app:layout_constraintTop_toBottomOf="@+id/imageView_check_icon" />

    <TextView
        android:id="@+id/textView_thanks_for_purchase_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text='Ditt kjøp kan finnes under "Poenghistorikk"'
        app:layout_constraintEnd_toEndOf="@+id/textView_thanks_for_purchase"
        app:layout_constraintStart_toStartOf="@+id/textView_thanks_for_purchase"
        app:layout_constraintTop_toBottomOf="@+id/textView_thanks_for_purchase" />

    <Button
        android:id="@+id/button_purchase_view_cupon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#41927B"
        android:text="Se kupong"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textView_thanks_for_purchase_info"
        app:layout_constraintStart_toStartOf="@+id/textView_thanks_for_purchase_info"
        app:layout_constraintTop_toBottomOf="@+id/textView_thanks_for_purchase_info" />

    <Button
        android:id="@+id/button_purchase_keep_shopping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:text="Fortsett å handle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_purchase_view_cupon"
        app:layout_constraintStart_toStartOf="@+id/button_purchase_view_cupon"
        app:layout_constraintTop_toBottomOf="@+id/button_purchase_view_cupon" />

    <ImageView
        android:id="@+id/imageView_close_purchase_dialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_clear_24px" />
</androidx.constraintlayout.widget.ConstraintLayout>