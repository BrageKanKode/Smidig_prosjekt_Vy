<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/GridLayout_shop_items"
        android:layout_width="400dp"
        android:layout_height="520dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_shop_item1"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#f2f2f3"

            app:cardCornerRadius="10dp"
            app:layout_column="0"
            app:layout_row="0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view_shop_item2"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#f2f2f3"
            app:cardBackgroundColor="#f2f2f3"
            app:cardCornerRadius="10dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view_shop_item3"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#f2f2f3"
            app:cardBackgroundColor="#f2f2f3"
            app:cardCornerRadius="10dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view_shop_item4"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#f2f2f3"
            app:cardBackgroundColor="#f2f2f3"
            app:cardCornerRadius="10dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view_shop_item5"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#f2f2f3"
            app:cardBackgroundColor="#f2f2f3"
            app:cardCornerRadius="10dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view_shop_item6"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#f2f2f3"
            app:cardBackgroundColor="#f2f2f3"
            app:cardCornerRadius="10dp" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>