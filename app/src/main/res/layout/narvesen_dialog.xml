<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_narvesen_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/sf_display"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_narvesen_logo" />

    <TextView
        android:id="@+id/textview_price_narvesen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_text"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"

        app:layout_constraintEnd_toEndOf="@+id/textview_narvesen_dialog"
        app:layout_constraintStart_toStartOf="@+id/textview_narvesen_dialog"
        app:layout_constraintTop_toBottomOf="@+id/textview_narvesen_dialog" />

    <TextView
        android:id="@+id/textview_currency_narvesen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_text"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/textview_price_narvesen"
        app:layout_constraintStart_toStartOf="@+id/textview_price_narvesen"
        app:layout_constraintTop_toBottomOf="@+id/textview_price_narvesen" />

    <Button
        android:id="@+id/button_buy_narvsesen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#CBEAE4"
        android:fontFamily="@font/sf_display"
        android:text="@string/buy"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_currency_narvesen" />

    <ImageView
        android:id="@+id/imageView_narvesen_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/narvesen_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_narvesen_logo" />

    <ImageView
        android:id="@+id/imageView_narvesen_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/close_marker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_clear_24px" />

</androidx.constraintlayout.widget.ConstraintLayout>