<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView_netflix_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/sfprodisplay_semibold"
        android:textAlignment="center"
        android:textColor="@color/mainBlack"
        android:text="@string/beskrivelse"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_netflix_logo" />

    <TextView
        android:id="@+id/textView_price_netflix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sfprotext_regular"
        android:textAlignment="center"
        android:textColor="@color/mainBlack"
        android:textSize="18sp"
        android:text="@string/example_text"
        app:layout_constraintEnd_toEndOf="@+id/textView_netflix_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_netflix_dialog"
        app:layout_constraintTop_toBottomOf="@+id/textView_netflix_dialog" />

    <TextView
        android:id="@+id/textView_currency_netflix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="@color/mainBlack"
        android:textSize="18sp"
        android:text="@string/example_text"
        app:layout_constraintEnd_toEndOf="@+id/textView_price_netflix"
        app:layout_constraintStart_toStartOf="@+id/textView_price_netflix"
        app:layout_constraintTop_toBottomOf="@+id/textView_price_netflix" />

    <Button
        android:id="@+id/button_buy_netflix"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_button_green"
        android:fontFamily="@font/sfprotext_bold"
        android:text="@string/buy"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_currency_netflix" />


    <ImageView
        android:id="@+id/imageView_netflix_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/netflix_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_netflix_2015_logo" />

    <ImageView
        android:id="@+id/imageView_netflix_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/close_marker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>