<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_bekreftelse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pt_sans"
        android:text="@string/confirmation_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_outline_check" />

    <Button
        android:id="@+id/btnToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hjem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_confirmation" />

    <TextView
        android:id="@+id/textView_confirmation_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pt_sans"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bekreftelse" />

    <TextView
        android:id="@+id/textView_confirmation_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pt_sans"
        app:layout_constraintStart_toStartOf="@+id/textView_confirmation_from"
        app:layout_constraintTop_toBottomOf="@+id/textView_confirmation_from" />

    <TextView
        android:id="@+id/textView_confirmation_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_string_confirmation_person_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toEndOf="@+id/textView_string_confirmation_person_text" />

    <ImageView
        android:id="@+id/imageView_outline_check"
        android:layout_width="64dp"
        android:layout_height="52.8dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/checkicon"
        android:fillColor="#DADADA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_done_outline_24px_outlined" />

    <ImageView
        android:id="@+id/imageView_ticet_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/ticket_icon"
        app:layout_constraintBottom_toBottomOf="@+id/textView_confirmation_from"
        app:layout_constraintEnd_toStartOf="@+id/textView_confirmation_from"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_vector" />

    <TextView
        android:id="@+id/textView_confirmation_travelType1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/enkeltbillet"
        app:layout_constraintStart_toStartOf="@+id/textView_confirmation_departure_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_confirmation_departure_time" />

    <TextView
        android:id="@+id/textView_string_confirmation_person_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/pt_sans"
        android:text="@string/voksen"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_confirmation_travelType1" />

    <TextView
        android:id="@+id/textView_confirmation_travelType2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/enkeltbillet"
        app:layout_constraintStart_toStartOf="@+id/textView_string_confirmation_person_text"
        app:layout_constraintTop_toBottomOf="@+id/textView_string_confirmation_person_text" />

    <TextView
        android:id="@+id/textView_string_confirmation_totalpris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/totalpris"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_confirmation_travelType2"
        app:layout_constraintTop_toBottomOf="@+id/textView_confirmation_travelType2" />

    <TextView
        android:id="@+id/textView_confirmation_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_string_confirmation_totalpris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toEndOf="@+id/textView_string_confirmation_totalpris" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_confirmation"
        android:layout_width="409dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#B3DFB4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_string_confirmation_totalpris">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_string_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans"
                android:text="@string/points_achieved"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.364"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.454" />

            <TextView
                android:id="@+id/textView_confirmation_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView_string_points_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.537"
                app:layout_constraintStart_toEndOf="@+id/textView_string_points_text" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/leaf_image"
                app:layout_constraintBottom_toBottomOf="@+id/textView_string_points_text"
                app:layout_constraintEnd_toStartOf="@+id/textView_string_points_text"
                app:srcCompat="@drawable/ic_eco_black_18dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>