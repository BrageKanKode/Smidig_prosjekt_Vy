<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_donate_tree"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnToPlantTree"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_donate_tree_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/sfprodisplay_bold"
                android:text="@string/donate_tree_title"
                android:textColor="@color/mainBlack"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_donate_forrest_dialog"
                android:layout_width="0dp"
                android:layout_height="83dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:fontFamily="@font/sfprotext_regular"
                android:text="@string/button_to_plant_a_tree"
                android:textColor="@color/mainBlack"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_donate_tree_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_donate_tree_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_donate_price_tree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:text="@string/_100_pr_tre"
                        android:textColor="@color/mainBlack"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView_donate_forrest_leaf"
                        app:layout_constraintStart_toEndOf="@+id/imageView_donate_forrest_leaf"
                        app:layout_constraintTop_toTopOf="@+id/imageView_donate_forrest_leaf" />

                    <ImageView
                        android:id="@+id/imageView_donate_forrest_leaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/leaf_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_leaf_black" />

                    <ImageView
                        android:id="@+id/textView_donate_forrest_pluss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/pluss_image"
                        android:fontFamily="@font/sf_text"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_add_icon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView_donate_stem_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/leaf_image"
                app:layout_constraintBottom_toBottomOf="@+id/textView_donate_forrest_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_forrest_dialog"
                app:layout_constraintTop_toTopOf="@+id/textView_donate_tree_title"
                app:srcCompat="@drawable/ic_trer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_donate_ocean"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_donate_tree">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnToCleanOcean"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_donate_ocean_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/sfprodisplay_bold"
                android:text="@string/donate_ocean_title"
                android:textColor="@color/mainBlack"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_donate_ocean_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:fontFamily="@font/sfprotext_regular"
                android:text="@string/button_to_clean_the_ocean"
                android:textColor="@color/mainBlack"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_donate_ocean_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_donate_ocean_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_donate_price_ocean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/sfprodisplay_bold"
                        android:text="@string/_100_pr_kg"
                        android:textColor="@color/mainBlack"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView_donate_ocean_leaf"
                        app:layout_constraintStart_toEndOf="@+id/imageView_donate_ocean_leaf"
                        app:layout_constraintTop_toTopOf="@+id/imageView_donate_ocean_leaf" />

                    <ImageView
                        android:id="@+id/imageView_donate_ocean_leaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/leaf_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_leaf_black" />

                    <ImageView
                        android:id="@+id/textView_donate_ocean_pluss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/pluss_image"
                        android:fontFamily="@font/sf_text"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_add_icon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView_donate_ocean_cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/line"
                app:layout_constraintBottom_toBottomOf="@+id/textView_donate_ocean_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_ocean_dialog"
                app:layout_constraintTop_toTopOf="@+id/textView_donate_ocean_title"
                app:srcCompat="@drawable/ic_plast" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>