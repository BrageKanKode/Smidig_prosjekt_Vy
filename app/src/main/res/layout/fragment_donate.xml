<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_donate_tree"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#f2f2f3"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnToPlantTree"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_donate_tree_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sf_display"
                android:text="@string/donate_tree_title"
                android:textColor="@color/colorBlack"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.153"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_donate_forrest_dialog"
                android:layout_width="225dp"
                android:layout_height="83dp"
                android:layout_marginTop="16dp"
                android:text="@string/button_to_plant_a_tree"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                app:fontFamily="@font/pt_sans"
                app:layout_constraintStart_toStartOf="@+id/textView_donate_tree_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_donate_tree_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_donate_price_tree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="48dp"
                        android:fontFamily="@font/sf_text"
                        android:text="@string/_100_pr_tre"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView_donate_forrest_leaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/leaf_image"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_donate_price_tree"
                        app:layout_constraintEnd_toStartOf="@+id/textView_donate_price_tree"
                        app:layout_constraintTop_toTopOf="@+id/textView_donate_price_tree"
                        app:srcCompat="@drawable/ic_leaf_black" />

                    <TextView
                        android:id="@+id/textView_donate_forrest_pluss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/sf_text"
                        android:text="@string/pluss"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_donate_price_tree"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView_donate_price_tree" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView_donate_stem_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/leaf_image"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_forrest_dialog"
                app:layout_constraintTop_toTopOf="@+id/textView_donate_forrest_dialog"
                app:srcCompat="@drawable/ic_tree_stem" />

            <ImageView
                android:id="@+id/imageViewdonate_three_top_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="32dp"
                android:contentDescription="@string/leaf_image"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_donate_stem_one"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_forrest_dialog"
                app:srcCompat="@drawable/ic_tree_top_three" />

            <ImageView
                android:id="@+id/imageView_donate_stem_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/leaf_image"
                app:layout_constraintStart_toEndOf="@+id/imageView_donate_stem_one"
                app:layout_constraintTop_toTopOf="@+id/imageView_donate_stem_one"
                app:srcCompat="@drawable/ic_tree_stem" />

            <ImageView
                android:id="@+id/imageView_donate_three_top_two"
                android:layout_width="56dp"
                android:layout_height="64dp"
                android:layout_marginStart="36dp"
                android:layout_marginBottom="32dp"
                android:contentDescription="@string/leaf_image"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_donate_stem_two"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_forrest_dialog"
                app:srcCompat="@drawable/ic_tree_top_two" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_donate_ocean"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="#f2f2f3"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_donate_tree">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnToCleanOcean"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_donate_ocean_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sf_display"
                android:text="@string/donate_ocean_title"
                android:textColor="@color/colorBlack"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_donate_ocean_dialog"
                android:layout_width="227dp"
                android:layout_height="81dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_text"
                android:text="@string/button_to_clean_the_ocean"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                app:fontFamily="@font/pt_sans"
                app:layout_constraintStart_toStartOf="@+id/textView_donate_ocean_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_donate_ocean_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_donate_price_ocean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="48dp"
                        android:fontFamily="@font/sf_text"
                        android:text="@string/_100_pr_kg"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView_donate_ocean_leaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/leaf_image"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_donate_price_ocean"
                        app:layout_constraintEnd_toStartOf="@+id/textView_donate_price_ocean"
                        app:layout_constraintTop_toTopOf="@+id/textView_donate_price_ocean"
                        app:srcCompat="@drawable/ic_leaf_black" />

                    <TextView
                        android:id="@+id/textView_donate_ocean_pluss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/sf_text"
                        android:text="@string/pluss"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_donate_price_ocean"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView_donate_price_ocean" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView_donate_ocean_cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/line"
                app:layout_constraintBottom_toBottomOf="@+id/textView_donate_ocean_dialog"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_ocean_dialog"
                app:srcCompat="@drawable/ic_cup_no_lid" />

            <ImageView
                android:id="@+id/imageView_donate_ocean_lid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/line"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_donate_ocean_cup"
                app:layout_constraintEnd_toEndOf="@+id/imageView_donate_ocean_cup"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView_donate_ocean_cup"
                app:layout_constraintTop_toTopOf="@+id/imageView_donate_ocean_cup"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_cup_lid" />

            <ImageView
                android:id="@+id/imageView_donate_ocean_straw"
                android:layout_width="70dp"
                android:layout_height="95dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/line"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_donate_ocean_cup"
                app:layout_constraintEnd_toEndOf="@+id/imageView_donate_ocean_cup"
                app:layout_constraintStart_toEndOf="@+id/textView_donate_ocean_dialog"
                app:srcCompat="@drawable/ic_frame" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>